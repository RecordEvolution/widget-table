{
    "name": "@record-evolution/widget-table",
    "description": "REWidget widget-table",
    "license": "MIT",
    "author": "widget-table",
    "version": "1.1.16",
    "engines": {
        "node": ">=24.9.0",
        "npm": ">=10.0.2"
    },
    "type": "module",
    "main": "dist/widget-table.js",
    "types": "dist/src/widget-table.d.ts",
    "files": [
        "dist",
        "src",
        "thumbnail.png"
    ],
    "scripts": {
        "analyze": "cem analyze --litelement",
        "start": "vite",
        "build": "vite build",
        "watch": "vite build --watch",
        "link": "npm run build && npm link && cd ../RESWARM/frontend && npm link @record-evolution/widget-table",
        "unlink": "npm unlink --global && cd ../RESWARM/frontend && npm unlink @record-evolution/widget-table && npm i @record-evolution/widget-table",
        "types": "cat src/definition-schema.json | json2ts > src/definition-schema.d.ts",
        "release": "npm run build && npm run types && npm version patch --tag-version-prefix='' && git push && git push --tag && npm run build"
    },
    "dependencies": {
        "lit": "^3.3.2",
        "tslib": "^2.8.1"
    },
    "peerDependencies": {
        "@vaadin/grid": "^24.0.0 || ^25.0.0"
    },
    "devDependencies": {
        "@custom-elements-manifest/analyzer": "^0.10.4",
        "@rollup/plugin-replace": "^6.0.2",
        "@vaadin/grid": "^25.0.2",
        "json-schema-to-typescript": "^15.0.4",
        "typescript": "5.9.3",
        "vite": "^7.3.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/RecordEvolution/widget-table.git"
    },
    "keywords": [
        "widget",
        "table"
    ],
    "bugs": {
        "url": "https://github.com/RecordEvolution/widget-table/issues"
    },
    "homepage": "https://github.com/RecordEvolution/widget-table#readme"
}
